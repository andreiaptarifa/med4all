  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, :label => "Nome",
                  required: true %>
      <%= f.input :last_name, :label => "Sobrenome",
                  required: true %>
      <%= f.input :gender, :label => "Genero",
                  required: true,
                  collection: User::GENDER %>
      <%= f.input :birthday, :label => "Nascimento",
                  as: :string,
                  required: true,
                  input_html: {class: "datepicker"} %>
      <%= f.input :cellphone %>
      <%= f.input :cpf %>
      <%= f.input :user_type, :label => "Tipo de usuário",
                  required: true,
                  collection: User::USER_TYPE %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :street, :label => "Rua",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "rua" }%>
      <%= f.input :number, :label => "Número",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "número" }%>
      <%= f.input :city, :label => "Cidade",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "cidade" }%>
      <%= f.input :password, :label => "Senha",
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, :label => "Confirme a senha",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :photo,
                  as: :file,
                  placeholder:"Image",
                  :label => 'Foto:'%>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Cadastrar", class: "btn-login" %>
    </div>
  <% end %>

  <%= render "devise/shared/links", class: "btn-white" %>
</div>
